{% extends "base.html.twig" %}

{% block title %}
	Resultat
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h3>Annonces disponibles cette période:
		</h3>
		<div class="row" style="margin-bottom:20px;">
			{% for ad in ads %}
				<div class="col-md-4">
					<div class="card" style="border-radius: 20px; margin-top: 30px;">
						<img src="{{ asset('uploads/' ~ ad.images[0].name )}}" class="img-fluid" alt="Image principale">
						<div class="card-body">
							<h5 class="card-title">{{ ad.title }}</h5>
							<p class="lead">
								<i class="fas fa-map-pin"></i>
								{{ ad.locality.name }}
							</p>
							<p class="card-text">
								{% for i in 1..5 %}
									<i class="fas fa-star"></i>
								{% endfor %}
							</p>
							<p class="price-ads">
								<strong>{{ ad.price }}</strong>
								&euro;
							</p>
							<a href="{{ path('ad_show', {'slug': ad.slug}) }}" class="btn btn-primary">Accèder à l'annonce</a>
						</div>
					</div>
				</div>

			{% endfor %}

		</div>

		<div class="d-flex justify-content-center" style="margin-top:10px;">
			{{ knp_pagination_render(ads, 'partials/_pagination.html.twig') }}
		</div>

	</div>
{% endblock %}
